<% provide(:title, 'New WorkSpace') %>
<h2>New Channel</h2>
<div class="row new_channel">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(:workspace, url: "#") do |f| %>
      <%= f.label :name, "Channel Name:" %>
      <%= f.text_field :name, class: "form-control" %>  

      <div class="row">
      <div class="col-md-2 container rd">
      <%= f.radio_button :status, "Public", class:"radio_size"  %>
      </div>
      <div class="col-md-2 container txt">
      <%= f.label :status, "Public" %>
      </div>
      <div class="col-md-2 container rd">
      <%= f.radio_button :status, "Private" , class:"radio_size" %>
      </div>
      <div class="col-md-2 container txt">
      <%= f.label :status, "Private" %>
      </div>
      </div>
      <%= f.submit "Create", class:"btn btn-primary btn-lg btn-block"  %>
      <% end %>
  </div>
  </div>


  